# Enhanced AI Agents Platform Configuration
# Copy this file to .env and customize the values for your environment

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port for the Express server
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Base URL for the application
BASE_URL=http://localhost:3000

# ===========================================
# SOCKET.IO CONFIGURATION
# ===========================================

# Allowed origins for Socket.IO connections
SOCKET_ORIGIN=http://localhost:3000

# Socket.IO connection timeout (milliseconds)
SOCKET_TIMEOUT=30000

# Enable Socket.IO debug logging
SOCKET_DEBUG=false

# ===========================================
# AGENT CONFIGURATION
# ===========================================

# Maximum number of concurrent agents
MAX_CONCURRENT_AGENTS=10

# Agent execution timeout (milliseconds)
AGENT_TIMEOUT=300000

# Default agent capabilities
DEFAULT_AGENT_CAPABILITIES=code_generation,file_manipulation,terminal_commands,debugging,testing

# Agent memory limit (MB)
AGENT_MEMORY_LIMIT=512

# Enable agent performance monitoring
AGENT_MONITORING=true

# ===========================================
# DEMO CONFIGURATION
# ===========================================

# Enable demo mode (shows simulated agents)
DEMO_MODE=true

# Demo simulation speed (slow, normal, fast)
SIMULATION_SPEED=normal

# Maximum demo session duration (milliseconds)
DEMO_SESSION_TIMEOUT=600000

# Auto-cleanup completed demos
DEMO_AUTO_CLEANUP=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Enable CORS
CORS_ENABLED=true

# Allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Enable Helmet security middleware
HELMET_ENABLED=true

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable file logging
LOG_TO_FILE=false

# Log file path
LOG_FILE_PATH=./logs/app.log

# Enable console logging
LOG_TO_CONSOLE=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Enable compression middleware
COMPRESSION_ENABLED=true

# Static file cache duration (seconds)
STATIC_CACHE_DURATION=86400

# Enable ETag headers
ETAG_ENABLED=true

# JSON body parser limit
JSON_LIMIT=50mb

# URL encoded body parser limit
URLENCODED_LIMIT=50mb

# ===========================================
# DATABASE CONFIGURATION (if needed)
# ===========================================

# Database URL (optional - for persistence)
# DATABASE_URL=mongodb://localhost:27017/enhanced-agents

# Database connection pool size
# DB_POOL_SIZE=10

# Database connection timeout
# DB_TIMEOUT=30000

# ===========================================
# EXTERNAL API CONFIGURATION
# ===========================================

# OpenAI API Key (if integrating real AI)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if integrating Claude)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key (if integrating Gemini)
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Enable application monitoring
MONITORING_ENABLED=false

# Analytics tracking ID
# ANALYTICS_ID=your_analytics_id_here

# Error reporting service URL
# ERROR_REPORTING_URL=https://your-error-service.com/api

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable voice input processing
VOICE_INPUT_ENABLED=false

# Enable image analysis
IMAGE_ANALYSIS_ENABLED=false

# Enable real-time collaboration
REALTIME_COLLABORATION=true

# Enable multi-agent coordination
MULTI_AGENT_COORDINATION=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable hot reload in development
HOT_RELOAD=true

# Enable source maps
SOURCE_MAPS=true

# Enable debugging tools
DEBUG_TOOLS=true

# Mock external services in development
MOCK_EXTERNAL_SERVICES=true

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Deployment platform (vercel, heroku, aws, gcp, azure)
# DEPLOYMENT_PLATFORM=vercel

# CDN URL for static assets
# CDN_URL=https://your-cdn.com

# Health check endpoint path
HEALTH_CHECK_PATH=/health

# Graceful shutdown timeout (milliseconds)
SHUTDOWN_TIMEOUT=30000